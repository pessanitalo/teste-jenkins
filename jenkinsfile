pipeline {
    agent any

    stages {
        stage('Start') {
            steps {
                script {
                    echo "✅ O Pipeline começou a rodar!"
                }
            }
        }

        stage('Test Docker Access') {
            steps {
                script {
                    echo "Testando acesso ao Docker..."
                    sh "docker version"
                    sh "docker images"
                }
            }
        }
    }
}
